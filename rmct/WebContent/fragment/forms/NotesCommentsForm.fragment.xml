<core:FragmentDefinition xmlns:m="sap.m"
	xmlns:core="sap.ui.core" xmlns="sap.ui.layout.form">
	<SimpleForm title="" columnsL="2" columnsM="2"
		editable="true" layout="ResponsiveGridLayout" busy="{global>/compNotesBusy}">
		<core:Title text="Notes" />
		<content>
			<m:TextArea id="notesArea" placeholder="Enter Text" growing="true" change=""
				growingMaxLines="7" width="100%" enabled="false"/>
		</content>
		<core:Title text="Scorecard Comment" />
		<content>
			<m:TextArea id="scoreCardCommentArea" placeholder="Enter Text" growing="true" change=""
				growingMaxLines="7" width="100%" enabled="false"/>
		</content>
	</SimpleForm>
</core:FragmentDefinition>